{
  "manifest_version": 2,
  "name": "ANNO - Audio Annotation Tool",
  "description": "This extension allows the user to quickly manage audio files and more.",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "ANNO"
  },
  "permissions": [
    "declarativeContent",
    "tabs",
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js",
        "remove-content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ]
}